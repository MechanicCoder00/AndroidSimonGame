<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:padding="10dp"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="@color/yellow"
        android:text="Main Menu" />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ToggleButton
            android:id="@+id/btnMMEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Easy"
            android:textOff="Easy"
            android:textOn="Easy" />

        <ToggleButton
            android:id="@+id/btnMMMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium"
            android:textOff="Medium"
            android:textOn="Medium" />

        <ToggleButton
            android:id="@+id/btnMMHard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hard"
            android:textOff="Hard"
            android:textOn="Hard" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMMStartGame"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Start Game" />

    <Button
        android:id="@+id/btnMMViewScores"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Scores" />

</LinearLayout>